<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginBottom="100sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRestoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resto_name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            />

        <ImageView
            android:layout_width="300sp"
            android:layout_height="200sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/resto_image"
            android:layout_below="@id/tvRestoName"
            android:layout_marginTop="10sp"
            android:id="@+id/imgResto"
            />

        <Button
            android:id="@+id/btnMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgResto"
            android:layout_alignStart="@id/imgResto"
            app:icon="@drawable/ic_baseline_email_24"
            app:iconGravity="textStart"
            android:paddingLeft="20sp"
            />

        <Button
            android:id="@+id/btnCall"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnMail"
            android:layout_below="@id/imgResto"
            android:layout_marginStart="20sp"
            app:icon="@drawable/ic_baseline_call_24"
            app:iconGravity="textStart"
            android:paddingLeft="20sp"
            />

        <Button
            android:id="@+id/btnMap"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnCall"
            android:layout_below="@id/imgResto"
            android:layout_marginStart="20sp"
            app:icon="@drawable/ic_baseline_map_24"
            app:iconGravity="textStart"
            android:paddingLeft="20sp"
            />


        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi : "
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/btnMail"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvDescDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resto_desc"
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvDesc"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/imgResto"
            />

    <!--    List Menu-->
        <TextView
            android:id="@+id/tvMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu : "
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvDescDetail"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvMenuDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Roti Segar\n2. Pastry\n3. Kue Manis\n4. Donat dan Bola Roti\n5. Roti Sandwich\n6. Kue Tradisional\n7. Permen\n8. Coklat\n9. DLL"
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvMenu"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/imgResto"
            />

    <!--    Address-->

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat : "
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvMenuDetail"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvAddressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resto_address"
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvAddress"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/imgResto"
            />


    <!--    Hours open-->
        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Buka : "
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvAddressDetail"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tvHoursDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senin - Jumat : 07.00 - 22.00\nSabtu - Minggu : 07.00 - 16.00"
            android:layout_alignStart="@+id/imgResto"
            android:layout_below="@id/tvHours"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/imgResto"
            android:layout_marginBottom="50sp"
            />


    </RelativeLayout>
</ScrollView>
